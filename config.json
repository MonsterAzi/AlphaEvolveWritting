{
  "llm_providers": {
    "openai": {
      "type": "openai",
      "api_key_env": "OPENAI_API_KEY"
    },
    "anthropic": {
      "type": "anthropic",
      "api_key_env": "ANTHROPIC_API_KEY"
    },
    "deepinfra": {
      "type": "openai_compatible",
      "api_key_env": "DEEPINFRA_API_KEY",
      "base_url": "https://api.deepinfra.com/v1/openai"
    },
    "deepseek": {
      "type": "openai_compatible",
      "api_key_env": "DEEPSEEK_API_KEY",
      "base_url": "https://api.deepseek.com"
    },
    "gemini": {
      "type": "openai_compatible",
      "api_key_env": "GEMINI_API_KEY",
      "base_url": "https://generativelanguage.googleapis.com/v1beta/openai/"
    }
  },
  "model_provider_mapping": {
    "gpt-4o-mini": "openai",
    "gpt-4o": "openai",
    "claude-3-opus-20240229": "anthropic",
    "claude-3-haiku-20240307": "anthropic",
    "meta-llama/Meta-Llama-3-70B-Instruct": "deepinfra",
    "deepseek-chat": "deepseek",
    "gemini-2.5-flash": "gemini"
  },
  "batch_generation": {
    "num_stories": 60,
    "model": "gpt-4o",
    "max_attempts": 3,
    "initial_elo": 1200
  },
  "next_batch_generation": {
    "top_stories_to_select": 5,
    "variants_per_story": 5,
    "model": "gpt-4o",
    "max_attempts": 3,
    "include_original_stories": true,
    "variant_temperature": 1.2
  },
  "elo_ranking": {
    "k_factor": 32,
    "judge_model": "gpt-4o",
    "tournament_rounds": 20,
    "max_concurrent_matches": 60,
    "min_elo_difference": 0,
    "save_match_history": true,
    "update_rankings_after_each_round": true
  },
  "evolution_pipeline": {
    "max_iterations": 5,
    "generate_final_batch": true,
    "auto_continue_from_existing": true,
    "log_level": "INFO"
  },
  "input_files": {
    "prompt_file": "prompt.txt",
    "rubric_file": "rubric.txt"
  },
  "output": {
    "directory": "output",
    "stories_file": "initial_stories.json",
    "next_batch_file": "batch2_stories.json",
    "elo_results_file": "elo_rankings.json",
    "match_history_file": "match_history.json"
  }
}